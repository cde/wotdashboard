body{
  font: 14px Verdana, Arial, Helvetica, sans-serif;
  /*background-color: #453e36;;*/
  margin: 15px auto;
  padding: 0;
  background: url(<%= asset_path "background_gradient.png" %>) repeat-x scroll left top white;

}

p{

  margin:0 0 20px 0px;
}

p, li{
  line-height:20px;
}


.clear{
    clear: both;
}

@import "header";

#wrapper {
    background: none repeat scroll 0 0 #FFFFFF;
    margin: 0 auto;
    text-align: left;
    width: 860px;
}

/*@import "sidebar";*/

section#posts{
    padding:20px;
    background-color:#F3F4EB;
	float: left;
	width: 74%;
}

section#posts aside{
	float: right;
	width: 35%;
	margin-left: 5%;
	font-size: 20px;
	line-height: 40px;
}

section#main-content{

    float: left;
    padding: 15px;
    width: 480px;
}


