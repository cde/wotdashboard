%div.sidebar

%div.content
  - flash.each do |name, msg|
    = show_flash name, msg
  %div.page-header
    %h2
      Report
  %div.row
    %div.span12
      %fieldset
        %p
          %b Title:
          = @report.title
        %p
          %b From
          =@report.starts_date
          %b To
          =@report.ends_date
        %p
          %b Note:
          = @report.note
        %p
          %b Filename:
          = @report.data
      %fieldset
        = render :partial=> 'funnels', :locals => {:funnels => @direct_funnels, :title => 'Direct Traffic'}
        = render :partial=> 'funnels', :locals => {:funnels => @ads_funnels, :title => 'With Promo Actions/Ads'}

      %fieldset
        = link_to 'Edit', edit_report_path(@report)
        \|
        = link_to 'Back', reports_path
