%div.sidebar
=# render 'sidebar'
%div.content
	- flash.each do |name, msg|
		= show_flash name, msg
	%div.page-header
		%h2
			Add Files
			%small Preview
	%div.row
		%div.span12
			= render :partial=> 'list_funnels', :locals => {:funnels => @funnels[:direct], :title => 'Direct Traffic'}
			= render :partial=> 'list_funnels', :locals => {:funnels => @funnels[:ads], :title =>'With Promo Actions/Ads'}
			%div.well{:style => 'padding: 14px 19px;text-align:center;'}
				%div.action
					= link_to 'Cancel', funnels_path, :class => 'btn cancel'
					= link_to 'Ok', funnels_process_file_path(@data_file), :class => 'btn primary'
